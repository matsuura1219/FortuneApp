<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    tools:context=".A.AppA02Activity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/textMargin"
        android:layout_marginBottom="@dimen/textMargin"
        android:gravity="center"
        android:text="@string/A02title"
        android:textColor="@color/white"
        android:textSize="@dimen/titleSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/bottomMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/soulNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="あなたのソウルナンバーは・・・"
                android:textColor="@color/buttonRed"
                android:textSize="@dimen/subTitleSize" />

            <TextView
                android:id="@+id/soulNumberCharacter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/contentSize" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contentMargin"
                android:gravity="left"
                android:text="あなたの性格は・・・"
                android:textColor="@color/buttonGreen"
                android:textSize="@dimen/subTitleSize" />

            <TextView
                android:id="@+id/detailCharacter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/contentSize" />

            <TextView
                android:id="@+id/personTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contentMargin"
                android:gravity="left"
                android:text="同じソウルナンバーの芸能人は・・・"
                android:textColor="@color/buttonWater"
                android:textSize="@dimen/subTitleSize" />

            <TextView
                android:id="@+id/person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/contentSize" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>